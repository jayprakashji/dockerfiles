FROM helder/php-5.3

##<autogenerated>##
RUN apt-get update \
	&& apt-get install -y --no-install-recommends \
		apache2 \
	&& rm -rf /var/lib/apt/lists/*

ENV APACHE_CONFDIR /etc/apache2
ENV APACHE_ENVVARS $APACHE_CONFDIR/envvars

RUN set -ex \
	\
# generically convert lines like
#   export APACHE_RUN_USER=www-data
# into
#   : ${APACHE_RUN_USER:=www-data}
#   export APACHE_RUN_USER
# so that they can be overridden at runtime ("-e APACHE_RUN_USER=...")
	&& sed -ri 's/^export ([^=]+)=(.*)$/: ${\1:=\2}\nexport \1/' "$APACHE_ENVVARS" \
	\
# setup directories and permissions
	&& . "$APACHE_ENVVARS" \
	&& for dir in \
		"$APACHE_LOCK_DIR" \
		"$APACHE_RUN_DIR" \
		"$APACHE_LOG_DIR" \
		/var/www/html \
	; do \
		rm -rvf "$dir" \
		&& mkdir -p "$dir" \
		&& chown -R "$APACHE_RUN_USER:$APACHE_RUN_GROUP" "$dir"; \
	done

# Apache + PHP requires preforking Apache for best results
RUN a2dismod mpm_event && a2enmod mpm_prefork

# logs should go to stdout / stderr
RUN set -ex \
	&& . "$APACHE_ENVVARS" \
	&& ln -sfT /dev/stderr "$APACHE_LOG_DIR/error.log" \
	&& ln -sfT /dev/stdout "$APACHE_LOG_DIR/access.log" \
	&& ln -sfT /dev/stdout "$APACHE_LOG_DIR/other_vhosts_access.log"

# PHP files should be handled by PHP, and should be preferred over any other file type
RUN { \
		echo '<FilesMatch \.php$>'; \
		echo '\tSetHandler application/x-httpd-php'; \
		echo '</FilesMatch>'; \
		echo; \
		echo 'DirectoryIndex disabled'; \
		echo 'DirectoryIndex index.php index.html'; \
		echo; \
		echo '<Directory /var/www/>'; \
		echo '\tOptions -Indexes'; \
		echo '\tAllowOverride All'; \
		echo '</Directory>'; \
	} | tee "$APACHE_CONFDIR/conf-available/docker-php.conf" \
	&& a2enconf docker-php

ENV PHP_EXTRA_BUILD_DEPS apache2-dev
ENV PHP_EXTRA_CONFIGURE_ARGS --with-apxs2

RUN apt-get update \
# gd
    && apt-get install -y --no-install-recommends libfreetype6-dev libjpeg62-turbo-dev libpng12-dev \
    && docker-php-ext-configure gd --with-freetype-dir=/usr/include/ --with-jpeg-dir=/usr/include/ \
    && docker-php-ext-install -j$(nproc) gd \
# iconv
    && docker-php-ext-install -j$(nproc) iconv \
# mcrypt
    && apt-get install -y --no-install-recommends libmcrypt-dev \
    && docker-php-ext-install -j$(nproc) mcrypt \
# intl
    && apt-get install -y --no-install-recommends libicu-dev \
    && docker-php-ext-install intl \
# mysql
    && docker-php-ext-install mysqli pdo_mysql \
# composer
    && curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/bin/ --filename=composer \
# mbstring
    && docker-php-ext-install mbstring \
# soap
    && apt-get install -y --no-install-recommends libxml2-dev \
    && docker-php-ext-install soap \
# opcache
    && docker-php-ext-install opcache \
# zip
    && docker-php-ext-install zip \
# git
    && apt-get install -y --no-install-recommends git \
# xsl
    && apt-get install -y --no-install-recommends libxslt-dev \
    && docker-php-ext-install xsl \
# bcmath
    && docker-php-ext-install bcmath \
# ldap
    && apt-get install -y --no-install-recommends libldap2-dev \
    && docker-php-ext-configure ldap --with-libdir=lib/x86_64-linux-gnu \
    && docker-php-ext-install ldap \
# redis
    && pecl install redis-3.1.0 \
    && docker-php-ext-enable redis \
# memcached
    && apt-get install -y libmemcached-dev zlib1g-dev \
    && pecl install memcached-2.2.0 \
    && docker-php-ext-enable memcached \
    \
# Enable Apache mod_rewrite
    && a2enmod rewrite \
# cleanup
    && rm -rf /var/lib/apt/lists/*

# Install ssmtp Mail Transfer Agent
RUN apt-get update \
    && apt-get install -y --no-install-recommends ssmtp \
    && apt-get clean \
    && echo "FromLineOverride=YES" >> /etc/ssmtp/ssmtp.conf \
    && echo 'sendmail_path = "/usr/sbin/ssmtp -t"' > /usr/local/etc/php/conf.d/mail.ini \
# cleanup
    && rm -rf /var/lib/apt/lists/*


# Default date.timezone
ENV PHP_TIMEZONE Europe/Bratislava
# Default DocumentRoot
ENV APACHE_DOC_ROOT /var/www/html
# Modified php.ini
COPY ./999-php.ini /usr/local/etc/php/conf.d/


ENV XDEBUG_ENABLE 1
RUN pecl config-set preferred_state beta \
    && pecl install -o -f xdebug \
    && rm -rf /tmp/pear \
    && pecl config-set preferred_state stable
COPY ./99-xdebug.ini.disabled /usr/local/etc/php/conf.d/







# For debug
# Debug tools
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
    mysql-client \
    less \
    vim \
    git \
    mc \
    openssh-client \
    nmap \
    && rm -rf /var/lib/apt/lists/*
COPY ./index.php /var/www/html/index.php





# Start!
COPY ./entrypoint.sh /usr/local/bin/
CMD ["entrypoint.sh"]







